@using FlowerShop.ViewModels.Components
@model List<FlowerShop.Models.Product>

<div class="flex flex-wrap justify-center w-full">
    @if (Model.Count > 0)
    {
        @foreach (var m in Model)
        {
            @await Component.InvokeAsync("ProductCard", new ProductCardViewModel()
            {
                Name = m.Name,
                ImageUrl = m.ImageUrl,
                Price = m.Price,
                Category = m.Category.Name,
                IsAvailable = m.Stock > 0
            })
        }
    }
    else
    {
        <p class="text-red-900 font-semibold">Nema proizvoda za odabrane filtere.</p>
    }
</div>