@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Cvećara Nikolić</title>
    <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"> 
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body class="flex min-h-screen overflow-hidden bg-contain" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('@Url.Content("~/AppImages/Fullscreen pozadina.jpg")'); background-size: cover">

<aside class="flex flex-col h-screen w-[300px] bg-red-900/85 shadow-all backdrop-blur-xl p-5">
    <div class="flex flex-col p-5 justify-center items-center border-b border-red-100">
        <img class="max-w-[175px]" src="~/AppImages/Logo bez pozadine.png" alt="">

    </div>
    
    <ul class="flex flex-col text-lg text-orange-100 mt-3">
        <li>
            
            <a  hx-get="/User/Profile/"
                hx-target="#user-content"
                hx-swap="innerHTML"
                hx-push-url="true"
                class="group flex cursor-pointer p-2 items-center rounded-lg transition-all duration-300 hover:bg-orange-500/10">
                <i class="fa-solid fa-user mr-5 transition-transform duration-300 group-hover:-translate-y-0.5 group-hover:text-orange-300"></i>
                <span class="transition-colors duration-300 group-hover:text-orange-200">Moj nalog</span>
            </a>
        </li>
        <li>
            <a  hx-get="/User/Profile/Orders"
                hx-target="#user-content"
                hx-swap="innerHTML"
                hx-push-url="true"
                class="group flex cursor-pointer p-2 items-center rounded-lg transition-all duration-300 hover:bg-orange-500/10">
                <i class="fa-solid fa-box mr-5 transition-transform duration-300 group-hover:-translate-y-0.5 group-hover:text-orange-300"></i>
                <span class="transition-colors duration-300 group-hover:text-orange-200">Narudžbine</span>
            </a>
        </li>
        
        <li>
            <a  hx-get="/User/Profile/Wishlist"
                hx-target="#user-content"
                hx-swap="innerHTML"
                hx-push-url="true"
                class="group flex cursor-pointer p-2 items-center rounded-lg transition-all duration-300 hover:bg-orange-500/10">
                <i class="fa-solid fa-heart mr-5 transition-transform duration-300 group-hover:-translate-y-0.5 group-hover:text-orange-300"></i>
                <span class="transition-colors duration-300 group-hover:text-orange-200">Lista želja</span>
            </a>
        </li>
        <li>
            <a  hx-get="/User/Profile/Reviews"
                hx-target="#user-content"
                hx-swap="innerHTML"
                hx-push-url="true"
                class="group flex cursor-pointer p-2 items-center rounded-lg transition-all duration-300 hover:bg-orange-500/10">
                <i class="fa-solid fa-star mr-4 transition-transform duration-300 group-hover:-translate-y-0.5 group-hover:text-orange-300"></i>
                <span class="transition-colors duration-300 group-hover:text-orange-200">Recenzije</span>
            </a>
        </li>
        <li>
            <a  hx-get="/User/Profile/Support"
                hx-target="#user-content"
                hx-swap="innerHTML"
                hx-push-url="true"
                class="group flex cursor-pointer p-2 items-center rounded-lg transition-all duration-300 hover:bg-orange-500/10">
                <i class="fa-solid fa-handshake-angle mr-4 transition-transform duration-300 group-hover:-translate-y-0.5 group-hover:text-orange-300"></i>
                <span class="transition-colors duration-300 group-hover:text-orange-200">Podrška</span>
            </a>
        </li>
        <li>
            <a  href="/User/Profile/Settings"
                hx-get="/User/Profile/Settings"
                hx-target="#user-content"
                hx-swap="innerHTML"
                hx-push-url="/User/Profile/Settings"
                class="group flex cursor-pointer p-2 items-center rounded-lg transition-all duration-300 hover:bg-orange-500/10">
                <i class="fa-solid fa-gear mr-5 transition-transform duration-300 group-hover:-translate-y-0.5 group-hover:text-orange-300"></i>
                <span class="transition-colors duration-300 group-hover:text-orange-200">Podešavanje</span>
            </a>
        </li>
    </ul>
    <div class="mt-auto border-t border-t-red-100 pt-3 text-orange-100 text-lg">
        <a  asp-area="" asp-controller="Home" asp-action="Index"
            class="group cursor-pointer flex w-full items-center py-2 px-3 rounded-lg transition-all duration-300 hover:bg-red-500/10">
            <i class="bi bi-backspace-fill mr-4 text-orange-400 transition-transform duration-300 group-hover:-translate-y-0.5 group-hover:text-orange-300"></i>
            <span class="transition-colors duration-300 group-hover:text-orange-200">Nazad na sajt</span>
        </a>
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="group flex w-full items-center py-2 px-3 rounded-lg transition-all duration-300 hover:bg-red-500/10">
                <i class="bi bi-door-closed-fill mr-4 text-red-400 transition-transform duration-300 group-hover:-translate-y-0.5 group-hover:text-red-300"></i>
                <span class="transition-colors duration-300 group-hover:text-red-200">Odjava</span>
            </button>
        </form>
    </div>
</aside>

<div class="flex flex-col gap-5 flex-grow">
    <header class="flex justify-end gap-4 items-center  p-2 shadow-all text-xl">
        <div class="mr-auto flex px-4 border-r border-red-900/85">
            <span class="text-red-900 font-semibold">Pregled profila</span>
        </div>
        <div class="flex">
            <button class="text-orange-600 hover:text-orange-400 duration-200">
                <i class="fa-regular fa-bell text-2xl"></i>
            </button>
        </div>
        <div class="flex ">
            <button class="text-green-900 hover:text-green-400 duration-200">
                <i class="bi bi-cart2 text-2xl"></i>
            </button>
        </div>
        <div class="flex px-4 border-l border-red-900/85">
            <span class="text-red-900 font-semibold">@User.Identity!.Name</span>
        </div>
    </header>
    
    <main role="main" class="mx-5 h-[1000px] overflow-y-scroll ">
        
        @RenderBody()
        
    </main>
    
</div>




<script src="https://cdn.jsdelivr.net/npm/htmx.org@2.0.8/dist/htmx.min.js" integrity="sha384-/TgkGk7p307TH7EXJDuUlgG3Ce1UVolAOFopFekQkkXihi5u/6OCvVKyz1W+idaz" crossorigin="anonymous"></script>
<script type="module" src="~/js/main.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>